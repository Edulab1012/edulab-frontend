generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model User {
  id   String @id @default(nanoid())
  role Role
}

enum Role {
  SCHOOL
  TEACHER
  STUDENT
  PARENT
}

model Student {
  id            String @id @default(nanoid())
  email         String?
  password      String?
  firstName     String?
  lastName      String?
  phoneNumber_1 Int?
  phoneNumber_2 Int
  parent        Parent? @relation(fields: [parentId], references: [id])
  parentId      String? @unique
}

model Parent {
  id            String    @id @default(nanoid())
  email         String?
  password      String?
  firstName     String?
  lastName      String?
  phoneNumber_1 Int?
  phoneNumber_2 Int
  Student       Student?
}

model Teacher {
   id            String     @id @default(nanoid())
  email         String?
  password      String?
  firstName     String?
  lastName      String?
  phoneNumber_1 Int?
  phoneNumber_2 Int?
  class 
}

